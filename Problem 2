Link to the problem- https://www.codingninjas.com/codestudio/problems/minimum-path-sum_985349?topList=striver-sde-sheet-problems
Solution to the problem-
#include<bits/stdc++.h>
int f(int n,int m,vector<vector<int>>&grid,vector<vector<int>> &dp)
{
    if(dp[n][m]!=-1)    return dp[n][m];
    int up=INT_MAX,left=INT_MAX;
    if(n>0)    up=f(n-1,m,grid,dp)+grid[n][m];
    if(m>0)    left=f(n,m-1,grid,dp)+grid[n][m];
    return dp[n][m]=min(up,left);
}
int minSumPath(vector<vector<int>> &grid) {
    // Write your code here.
    int n=grid.size();
    int m=grid[0].size();
    vector<vector<int>> dp(n,vector<int>(m,-1));
    dp[0][0]=grid[0][0];
    for(int i=0;i<n;i++)
    {
        for(int j=0;j<m;j++)
        {
            if(i==0 && j==0)    continue;
            else if(i==0)    dp[i][j]=dp[i][j-1]+grid[i][j];
            else if(j==0)    dp[i][j]=dp[i-1][j]+grid[i][j];
            else    dp[i][j]=min(dp[i][j-1],dp[i-1][j])+grid[i][j];
        }
    }
    return dp[n-1][m-1];
}
